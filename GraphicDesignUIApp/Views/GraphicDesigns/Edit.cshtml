@model GraphDesignApp.GraphicDesign

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>GraphicDesign</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="GraphicDesignId" />
            <div class="form-group">
                <label asp-for="DesignType" class="control-label"></label>
                <select asp-for="DesignType" class="form-control"  asp-items="Html.GetEnumSelectList<GraphDesignApp.GraphicDesignType>()"></select>
                <span asp-validation-for="DesignType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <select asp-for="Color" class="form-control"  asp-items="Html.GetEnumSelectList<GraphDesignApp.GraphicDesignColor>()"></select>
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Size" class="control-label"></label>
                <select asp-for="Size" class="form-control" asp-items="Html.GetEnumSelectList<GraphDesignApp.GraphicDesignSize>()"></select>
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaperQuality" class="control-label"></label>
                <select asp-for="PaperQuality" class="form-control" asp-items="Html.GetEnumSelectList<GraphDesignApp.DesignPaperQuality>()"></select>
                <span asp-validation-for="PaperQuality" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShippingType" class="control-label"></label>
                <select asp-for="ShippingType" class="form-control" asp-items="Html.GetEnumSelectList<GraphDesignApp.ShippingType>()"></select>
                <span asp-validation-for="ShippingType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitPrice" class="control-label"></label>
                <input asp-for="UnitPrice" class="form-control" />
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailAddress" class="control-label"></label>
                <select asp-for="EmailAddress" class="form-control" asp-items="ViewBag.EmailAddress"></select>
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
